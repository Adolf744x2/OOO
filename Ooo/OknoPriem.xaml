<Page x:Class="Ooo.OknoPriem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ooo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OknoPriem">

    <Grid>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding Patronymic}"/>
                    <GridViewColumn Header="Фотография" DisplayMemberBinding="{Binding PhotoPath}"/>
                   
                   
                   
                    <GridViewColumn Header="Типа какой-то учёт" DisplayMemberBinding="{Binding GenderCode}"/>
                    <GridViewColumn Header="посещений клиента" DisplayMemberBinding="{Binding RegistrationDate}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
